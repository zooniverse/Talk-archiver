---
layout: default
pagination:
  data: userCollections
  resolve: values
  size: 1
  alias: userCollection
permalink: "/collections/{{ userCollection.zooniverse_id}}/"
renderData:
  title: "{{ userCollection.title }}"
  description: "{{ userCollection.description }}"
---
<h1>{{ userCollection.title }}</h1>
<p>{{ userCollection.description }}</p>
<div class="page-grid">
  <div>
    <h2>Comments</h2>
    <ul>
    {%- for comment in userCollection.discussion.comments | reverse -%}
    <li id={{ comment._id }} class="comment">
      <a href="/users/{{ comment.user_name }}">
        {% avatar comment.user_name, users[comment.user_zooniverse_id].avatar_url %}
      </a>
      by
      <a href="/users/{{ comment.user_name }}">
        {{ comment.user_name }}
      </a>
        {% if comment.response_to %}
          <a href="#{{ comment.response_to._id }}">in response to {{ comment.response_to.user_name}}'s comment.</a>
        {% endif %}

        {{ comment.body | safe }}

        Posted <time datetime={{ comment.created_at }}>{{ comment.created_at | date }}</time>
    </li>
    {%- endfor -%}
    </ul>
  </div>
  <ul class="collection">
  {%- for subject in userCollection.subjects -%}
    <li id={{ subject.zooniverse_id }} class="subject">
      <a href="/subjects/{{ subject.zooniverse_id }}"><img src={{ subject.location.thumb}}></a> 
    </li>
  {%- endfor -%}
  </ul>
</div>